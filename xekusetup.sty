% ------------------ TEXT FORMATTING MACROS -------------------------
\newcommand{\russ}[1]{{\em #1}} % Russian text
\newcommand{\oodh}[1]{{\em #1}} % O'odham text
\newcommand{\trans}[1]{{\it \textipa{#1}}} % transliteration
\newcommand{\engl}[1]{‘#1’} % single quotes
\newcommand{\quot}[1]{“#1”} % double quotes
\newcommand{\rquot}[1]{«#1»} % Russian-style quotes
\newcommand{\abr}[1]{\textsc{#1}} % abbreviation
\newcommand{\und}[1]{\underline{#1}} % underline
\newcommand{\jo}[0]{ё} % yo character

\newcommand{\ocst}[1]{{\ocs #1}} % OCS text

\newcommand{\no}[1]{{\color{KUBlue} #1}} % note

\newcommand{\tdg}[1]{\textdoublegrave{#1}} % double grave accent
\renewcommand{\k}[1]{\textpolhook{#1}} % Polish ogonek


